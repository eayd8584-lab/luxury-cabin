@{
    ViewData["Title"] = "نسيت كلمة المرور";
}

@model CarRentalSystem.Web.ViewModels.ForgotPasswordViewModel

<div class="container mt-5">
    <div class="hero text-center">
        <h2>هل نسيت كلمة المرور؟</h2>
        <p>لا تقلق! أدخل بريدك الإلكتروني لإعادة تعيينها.</p>
    </div>

    <form asp-action="ForgotPassword" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Email">البريد الإلكتروني</label>
            <input asp-for="Email" class="form-control" type="email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-md-12 text-center mb-3">
                <button type="submit" class="btn btn-primary">إرسال رابط الاستعادة</button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

